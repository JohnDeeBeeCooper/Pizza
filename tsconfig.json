{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./build/",
    "rootDir": "src",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "es2018",
      "dom",
      "esnext.asynciterable"
    ],
    "baseUrl": "src",
    "paths": {
      "utils/*": [
        "utils/*"
      ],
      "atoms": [
        "components/atoms/"
      ],
      "molecules": [
        "components/molecules/"
      ],
      "organisms": [
        "components/organisms/"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "webpack.config.js"
  ]
}